<h1 align="center">Log in</h1>

   <%= form_for(:auth, :html =>{class: "form-horizontal",role:"form"},url: login_path) do |form| %>
            <div class='form-group'>
                <div class='control-label col-sm-2'>
                    <%= form.label :email%>
                </div>
                <div class='col-sm-8'>
                    <%= form.email_field :email,class:"form-control",placeholder:"enter email",autofocus: true  %>
                </div>
            </div>
            <div class='form-group'>
                <div class='control-label col-sm-2'>
                    <%= form.label :password%>
                </div>
                <div class='col-sm-8'>
                    <%= form.password_field :password,class:"form-control",placeholder:"enter password" %>
                </div>
            </div>  
 <div class='form-group'>
  <div class='col-sm-offset-2 col-sm-10'>
   <%= form.submit "login", class:"btn btn-primary btn-lg"  %>
  </div>
  </div>
<% end %>
<div class="col-xs-4 col-xs-offset-4">
